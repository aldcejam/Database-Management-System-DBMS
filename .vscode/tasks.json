{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc arquivo de build ativo",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/main.c",  
                "${workspaceFolder}/src/database/DatabaseStructures.c",
                "${workspaceFolder}/src/database/table/create/CreateTable.c",
                "${workspaceFolder}/src/database/table/delete/DeleteTable.c",
                "${workspaceFolder}/src/database/table/list/table/ListTable.c",
                "${workspaceFolder}/src/database/table/list/tableData/ListTableData.c",
                "${workspaceFolder}/src/database/table/tuple/insert/InsertTuple.c",
                "${workspaceFolder}/src/database/table/tuple/search/SearchTuple.c",
                "${workspaceFolder}/src/database/table/tuple/delete/DeleteTuple.c",
                "${workspaceFolder}/src/database/table/save/SaveTable.c",
                "-o",  
                "${workspaceFolder}/dist/main",
            ], 
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarefa gerada pelo Depurador."
        }
    ],
    "version": "2.0.0"
}